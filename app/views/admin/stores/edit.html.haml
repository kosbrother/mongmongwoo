.content-box-large
  .breadcrumb-topbar
    %ol.breadcrumb
      %li
        = link_to "萌萌屋", admin_root_path
      %li
        = link_to "搜尋超商門市", search_store_admin_stores_path
      %li.active 編輯超商門市店號
  .panel-body
    %h2 編輯 #{@store.name}店號
    .edit-store-area.well
      = form_for [:admin, @store], html: { class: "form-horizontal" } do |f|
        .form-group
          = f.label :store_code, "門市店號", class: "col-sm-2 control-label"
          .col-sm-6
            = f.text_field :store_code, class: "form-control", required: true
        .form-group
          .col-sm-offset-2.col-sm-6
            = f.submit "確認送出", class: "btn btn-primary"
            = link_to "取消離開", search_store_admin_stores_path, class: "btn btn-warning"
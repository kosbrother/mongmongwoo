.row
  .col-md-12.panel-warning
    .content-box-header.panel-heading
      .panel-title 商品查詢結果
    .content-box-large.box-with-header
      = render_pagination(@search_results)
      %br/
      .panel-body
        %table.table.table-striped.table-bordered{:border => "0", :cellpadding => "0", :cellspacing => "0"}
          %thead
            %tr
              %th 商品編號
              %th 商品圖片
              %th 商品名稱
              %th 商品狀態
              %th 商品價格
              %th 淘寶連結
          %tbody
            - @search_results.each do |item|
              %tr
                %td
                  = link_to item.id, admin_item_path(item)
                %td
                  = link_to admin_item_path(item) do
                    = item_icon(item.cover)
                %td
                  = link_to item.name, admin_item_path(item)
                %td{:id => "status-#{item.id}"}
                  = link_to_update_item_status(item)
                %td
                  = item.price
                %td
                  = link_to item.url, target: "_blank" do
                    按此前往淘寶商品頁
      = render_pagination(@search_results)

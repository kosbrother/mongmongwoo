$("#status-#{@item.id}").html('#{link_to "上架中", update_shelf_path(@item), method: :patch, remote: true, class: "btn btn-default"}')
- if @item.all_specs_off_shelf?
  :plain
    $(function(){
      new PNotify({
        title: '已將此商品上架',
        text: '請將下架的樣式也一併上架，不然手機端會當機'
      });
    });
- else
  :plain
    $(function(){
      new PNotify({
        title: '已將此商品上架'
      });
    });
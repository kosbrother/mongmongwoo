<div class="row">
  <div class="row">
    <div class="col-md-12 panel-warning">
      <div class="content-box-header panel-heading">
        <div class="panel-title ">商品查詢結果</div>
        <div class="panel-options">
          <a href="#" data-rel="collapse"><i class="glyphicon glyphicon-refresh"></i></a>
          <a href="#" data-rel="reload"><i class="glyphicon glyphicon-cog"></i></a>
        </div>
      </div>
      <div class="content-box-large box-with-header">
        <div class="apple_pagination">
          <%= will_paginate @search_results_page, :container => false %>
        </div><br>

        <div class="panel-body">
          <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
            <thead>      
              <tr>
                <th>商品圖片</th>
                <th>商品名稱</th>
                <th>商品價格</th>
                <th>淘寶連結</th>
              </tr>
            </thead>
            <tbody>
              <% @search_results.each do |item| %>
                <tr>
                  <td>
                    <%= link_to admin_item_path(item) do %>
                      <%= item_icon(item.cover) %>
                    <% end %>
                  </td>
                  <td>
                  <%= link_to item.name, admin_item_path(item) %></td>
                  <td>
                    <%= item.price %>
                  </td>
                  <td>
                    <%= link_to item.url, target: "_blank" do %>
                      按此前往淘寶商品頁
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <div class="apple_pagination">
          <%= will_paginate @search_results_page, :container => false %>
        </div>
      </div>
    </div>
  </div>
</div>
.form-group
  = f.label :url, "賣場連結", class: "col-sm-2 control-label"
  .col-sm-10
    = f.url_field :url, class: "form-control", placeholder: "請輸入連結", required: true
.form-group
  = f.label :taobao_supplier_id, "淘寶商家", class: "col-sm-2 control-label"
  .col-sm-10
    = f.select :taobao_supplier_id, TaobaoSupplier.all.collect { |supplier| ["編號#{supplier.id}：#{supplier.name}", supplier.id] }, { include_blank: "請選擇商家" }, { class: "form-control", required: true }
.form-group
  = f.label :cost, "淘寶價格", class: "col-sm-2 control-label"
  .col-sm-10
    = f.number_field :cost, class: "form-control", placeholder: "請輸入價格", step: "0.01", required: true
.form-group
  = f.label :taobao_name, "淘寶商品名稱", class: "col-sm-2 control-label"
  .col-sm-10
    = f.text_field :taobao_name, class: "form-control", placeholder: "請輸入名稱"
.form-group
  = f.label :name, "商品名稱", class: "col-sm-2 control-label"
  .col-sm-10
    = f.text_field :name, class: "form-control", placeholder: "請輸入名稱", required: true
.form-group
  = f.label :price, "商品價格", class: "col-sm-2 control-label"
  .col-sm-10
    = f.number_field :price, class: "form-control", placeholder: "請輸入價格", required: true
.form-group
  = f.label :special_price, "優惠價格", class: "col-sm-2 control-label"
  .col-sm-10
    = f.number_field :special_price, class: "form-control", placeholder: "請輸入價格"
.form-group
  = f.label :cover, "商品封面圖", class: "col-sm-2 control-label"
  .col-sm-10
    = f.file_field :cover, class: "form-control"
.form-group
  = f.label :description, "商品描述", class: "col-sm-2 control-label"
  .col-sm-10
    = f.cktext_area :description, rows: 6, class: "form-control", placeholder: "請輸入描述", :ckeditor => {:language => 'zh-TW'}, required: true
.form-group
  = f.label :shelf_position, "貨架編號", class: "col-sm-2 control-label"
  .col-sm-10
    = f.text_field :shelf_position, class: "form-control", placeholder: "請輸入貨架編號"
- if current_admin.manager?
  .form-group
    = f.label :note, "商品備註", class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :note, class: "form-control", placeholder: "請輸入商品備註"
.form-group
  = f.label "商品母分類", class: "col-sm-2 control-label"
  .col-sm-10
    = categories_checkox(f)
.form-group
  = f.label "商品子分類", class: "col-sm-2 control-label"
  #sub-category-field.col-sm-10
    = subcategories_checkbox(f)
.form-group
  = f.label :tag_list, "商品標籤", class: "col-sm-2 control-label"
  .col-sm-10
    = tag_checkbox(f)
.form-group
  .col-sm-offset-2.col-sm-10
    = f.submit "確認送出", class: "btn btn-primary"
    = link_to "取消離開", :back, class: "btn btn-warning"
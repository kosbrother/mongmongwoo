= form_for [:admin, @category], html: { class: "form-horizontal" } do |f|
  - if params[:parent_id]
    = hidden_field_tag "category[parent_id]", params[:parent_id]
  .form-group
    = f.label :name, "分類名稱", class: "col-sm-1 control-label"
    .col-sm-7
      = f.text_field :name, class: "form-control", placeholder: "請輸入名稱"
  .form-group
    = f.label :image, "分類圖片", class: "col-sm-1 control-label"
    .col-sm-7
      = f.file_field :image, class: "form-control"
  .form-group
    .col-sm-offset-1.col-sm-7
      = f.submit "確認送出", class: "btn btn-primary"
      = link_to "取消離開", admin_categories_path, class: "btn btn-warning"
%table#example.table.table-striped.table-bordered{:border => "0", :cellpadding => "0", :cellspacing => "0"}
  %thead
    %tr
      %th 使用者編號
      %th 使用者姓名
      %th 通知使用者
  %tbody#items-sort-list{"data-sort-url" => sort_items_priority_admin_categories_path(category: @category)}
    - @users.find_each(batch_size: 300) do |user|
      %tr
        %td= user.id
        %td= user.user_name
        %td= link_to_create_record(user, @message)
        / %td= link_to "發送訊息", new_message_record_admin_message_path(user_id: user.id), class: "btn btn-primary", method: :post

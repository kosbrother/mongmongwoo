= form_for [:admin, @notification], html: { class: "form-horizontal" } do |f|
  .form-group
    = f.label :content_title, "訊息標題", class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :content_title, class: "form-control", placeholder: "請輸入標題", required: true
  .form-group
    = f.label :content_text, "訊息內容", class: "col-sm-2 control-label"
    .col-sm-10
      = f.text_field :content_text, class: "form-control", placeholder: "請輸入內容", required: true
  .form-group
    = f.label :category_id, "推播分類", class: "col-sm-2 control-label"
    .col-sm-10
      = f.select :category_id, Category.parent_categories.collect { |category| ["#{category.id} : #{category.name}", category.id] }, { include_blank: "請選擇分類" }, { class: "form-control", required: true }
  .form-group
    = f.label :item_id, "推播商品", class: "col-sm-2 control-label"
    .col-sm-10
      = f.select :item_id, [], { include_blank: "請選擇商品" }, class: "form-control", required: true
  .form-group
    = label_tag "推播執行日期", nil, class: "col-sm-2 control-label"
    .col-sm-10
      = datetime_field_tag "execute_time", nil, class: "form-control datetimepicker", placeholder: "請選擇執行日期", required: true
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "確認送出", class: "btn btn-primary"
      = link_to "取消離開", admin_notifications_path, class: "btn btn-warning"
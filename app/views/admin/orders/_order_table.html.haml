.panel-body
  %table#example.table.table-striped.table-bordered{:border => "0", :cellpadding => "0", :cellspacing => "0"}
    %thead
      %tr
        %th 編號
        %th 訂購日期
        %th 訂購用戶
        %th 訂購商品
        %th 總金額
        %th 訂單狀態
    %tbody
      - @orders.each do |order|
        %tr
          %td
            = render(partial: "info_and_items_list", locals: { order: order })
            = render(partial: "edit_order", locals: { order: order })
            .dropdown
              %button#dropdownMenu1.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                按此選擇
                %span.caret
              %ul.dropdown-menu.list-group{"aria-labelledby" => "dropdownMenu4"}
                %li
                  %button.edit-order-btn{"data-target" => "#edit-order-#{order.id}", "data-toggle" => "modal", remote: true, :type => "button"}
                    編輯
                %li
                  %button.edit-order-btn
                    刪除
          %td= order.created_on
          %td= link_to order.info_user_name, admin_user_path(order.user)
          %td
            %table.table.table-bordered
              %thead
                %tr.active
                  %th 編號
                  %th 名稱
                  %th 樣式
                  %th 數量
              %tbody
                - if order.items
                  - order.items.each do |item|
                    %tr.success
                      %td= item.id
                      %td
                        = link_to item.item_name, admin_item_path(item.item)
                      %td= item.item_style
                      %td= item.item_quantity
            %table.table.table-bordered
              %tbody
                %tr.active
                  %th 備註
                %tr
                  %td= order.note
          %td= order.total
          %td
            .btn-group-vertical{role: "group", id: "order-#{order.id}"}
              = link_to "新訂單", "#",{ id: "order-#{order.id}-placed", class: "btn btn-default #{order.status == "新訂單" ? "btn-lg" : "btn-xs"}" }
              = link_to "處理中", update_status_admin_order_path(order, status: 1),{ method: :patch, remote: true, id: "order-#{order.id}-processing", class: "btn #{order.status == "處理中" ? "btn-primary btn-lg" : "btn-default btn-xs"}" }
              = link_to "已出貨", update_status_admin_order_path(order, status: 2), { method: :patch, remote: true, id: "order-#{order.id}-shipping", class: "btn #{order.status == "已出貨" ? "btn-primary btn-lg" : "btn-default btn-xs"}" }
              = link_to "完成取貨", update_status_admin_order_path(order, status: 3), { method: :patch, remote: true, id: "order-#{order.id}-shipped", class: "btn #{order.status == "完成取貨" ? "btn-primary btn-lg" : "btn-default btn-xs"}" }
              = link_to "訂單取消", update_status_admin_order_path(order, status: 4), { method: :patch, remote: true, id: "order-#{order.id}-cancel", class: "btn #{order.status == "訂單取消" ? "btn-primary btn-lg" : "btn-default btn-xs"}" }
      #updateResult

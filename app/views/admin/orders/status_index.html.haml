.row
  .col-md-12.panel-warning
    .content-box-large.box-with-header
      .clearfix
        .pull-right
          = render "search_form"
          %p.help-block
          - if params[:status].to_i == Order.statuses["新訂單"]
            .pull-right
              = link_to '處理有現貨訂單', update_to_processing_admin_orders_path, class: 'btn btn-default', method: :patch
          - if params[:status].to_i == Order.statuses["處理中"]
            = render "processing_link"
          - if params[:status].to_i == Order.statuses["退貨"]
            .pull-right
              = link_to '退貨訂單EXCEL(尚未入庫)', export_returned_order_list_admin_orders_path(format: 'xlsx'), class: 'btn btn-default'
        %h2.header-title 訂單狀態分類列表
      %p.help-block
      - if able_render_ship_type_navs?(status: params[:status])
        = ship_type_navs(status: params[:status])
      %p.help-block
      %ul.nav.nav-tabs
        = li_status_link(status: Order.statuses["新訂單"], ship_type: Order.ship_types["store_delivery"])
        = li_status_link(status: Order.statuses["處理中"], ship_type: Order.ship_types["store_delivery"])
        = li_status_link(status: Order.statuses["配送中"], ship_type: Order.ship_types["store_delivery"])
        = li_status_link(status: Order.statuses["已到店"], ship_type: Order.ship_types["store_delivery"])
        = li_status_link(status: Order.statuses["完成取貨"], ship_type: Order.ship_types["store_delivery"])
        = li_status_link(status: Order.statuses["未取訂貨"], ship_type: Order.ship_types["store_delivery"], restock: false)
        = li_status_link(status: Order.statuses["訂單變更"], ship_type: Order.ship_types["store_delivery"])
        = li_status_link(status: Order.statuses["訂單取消"], ship_type: Order.ship_types["store_delivery"])
        = li_status_link(status: Order.statuses["退貨"], ship_type: Order.ship_types["store_delivery"], restock: false)
      - if params[:restock].present?
        %p.help-block
        = restock_navs(status: params[:status])
      = render "order_table", orders: @orders
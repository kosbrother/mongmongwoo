%h1 訂單編號：#{@order.id}
= form_for [:admin, @order], :html => {"data-target": "#edit-order-#{@order.id}"}, class: "edit-order" do |f|
  .form-group
    = f.label :total, "總金額"
    = f.text_field :total, class: 'form-control'
  .form-group
    = f.label :note, "訂單備註"
    = f.text_area :note, class: 'form-control', rows: 5
  = f.fields_for :info do |info_f|
    .form-group
      = info_f.label :ship_email, "Email"
      = info_f.email_field :ship_email, class: 'form-control'
    .form-group
      = info_f.label :ship_phone, "聯絡電話"
      = info_f.text_field :ship_phone, class: 'form-control'
    .form-group
      = info_f.label :ship_store_code, "門市店號"
      = info_f.text_field :ship_store_code, class: 'form-control ship-store-code', id: "store-code-#{@order.id}", data: {order_id: @order.id}
    / .form-group
    /   = info_f.label :ship_store_name, "門市名稱"
    /   = info_f.text_field :ship_store_name, class: 'form-control ship-store-name', id: "store-name-#{@order.id}"
    / .form-group
    /   = info_f.label :ship_store_id, "門市編號", class: 'sr-only'
    /   = info_f.hidden_field :ship_store_id, class: 'form-control ship-store-id', id: "store-id-#{@order.id}"
  = f.submit "送出變更", class: "btn btn-primary", id: "submit-#{@order.id}"
  = link_to "取消", status_index_admin_orders_path, class: "btn btn-default"
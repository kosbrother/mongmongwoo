<div class="row">
  <div class="row">
    <div class="col-md-12 panel-warning">
      <div class="content-box-header panel-heading">
        <div class="panel-title ">訂單配送列表</div>
      </div>
      <div class="content-box-large box-with-header">        
        <div class="apple_pagination">
          <%= will_paginate @order_for_file_page, :container => false %>
        </div>
        <div class="panel-body">
          <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" id="example">
            <div>
              <p>
                下載：
                <%= link_to "CSV檔", exporting_files_admin_orders_path(format: "csv",page: params[:page]) %>
              </p>
            </div>
            <thead>
              <tr>
                <th>配送類別</th>
                <th>訂單類別</th>
                <th>取件人姓名</th>
                <th>取件人手機</th>
                <th>取件人電子郵件</th>
                <th>取件門市</th>
                <th>訂單金額</th>
              </tr>
            </thead>
            <tbody>
              <% @orders_for_file.each do |order| %>
                <tr>
                  <td>K</td>
                  <td>1</td>
                  <td><%= order.info_user_name %></td>
                  <td><%= phone_number_looking(order) %></td>
                  <td>kosbrotherschool@gmail.com</td>
                  <td><%= order.info_store_code %></td>
                  <td><%= order.total %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>        
        <div class="apple_pagination">
          <%= will_paginate @order_for_file_page, :container => false %>
        </div>
      </div>
    </div>
  </div>
</div>
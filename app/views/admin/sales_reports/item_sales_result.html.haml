.row
  .col-md-12.panel-warning
    .content-box-header.panel-heading
      .panel-title 商品銷售數量列表
    .content-box-large.box-with-header
      .panel-body
        .dropdown
          %button#taobao-sales-menu.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
            選擇淘寶商家
            %span.caret
          %ul.dropdown-menu.list-group{"aria-labelledby" => "taobao-sales-menu"}
            %li= link_to "全部商家", item_sales_result_admin_sales_reports_path
            - TaobaoSupplier.all.each do |supplier|
              %li= link_to "編號#{supplier.id}：#{supplier.name}", item_sales_result_admin_sales_reports_path(supplier_id: supplier.id, time_field: params[:time_field])  
        %br
        %p.lead.current-taobao-supplier
          = get_taobao_supplier_name(params[:supplier_id])
        %hr
        .report-type
          .time_field_button.pull-right
            %ul.nav.nav-pills              
              = li_sales_link_all_time_and_supplier("全部")
              = li_sales_link_with_periods_and_supplier("month", "按月排序")
              = li_sales_link_with_periods_and_supplier("week", "按週排序")
              = li_sales_link_with_periods_and_supplier("day", "按日排序")
          %ul.nav.nav-tabs
            %li.active{:role => "presentation"}
              = link_to "商品銷售數量", item_sales_result_admin_sales_reports_path
            %li{:role => "presentation"}
              = link_to "商品銷售金額", item_revenue_result_admin_sales_reports_path
        %table.table.table-striped.table-bordered{:border => "0", :cellpadding => "0", :cellspacing => "0"}
          = render partial: "item_sales_whether_supplier"
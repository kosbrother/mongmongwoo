.row
  .col-md-12.panel-warning
    .content-box-header.panel-heading
      .panel-title 商品銷售數量列表
    .content-box-large.box-with-header
      .panel-body
        .input-new-cost-data
          = form_tag item_sales_result_admin_sales_reports_path, { class: "form-horizontal well", method: :get } do
            .form-group
              = label_tag :start_date, "查詢起始日期", class: "col-sm-2 control-label"
              .col-sm-3
                = date_field_tag :start_date, params[:start_date], {  class: "form-control", placeholder: "請輸入起始日期", required: true }
            .form-group
              = label_tag :end_date, "查詢結束日期", class: "col-sm-2 control-label"
              .col-sm-3
                = date_field_tag :end_date, params[:end_date], {  class: "form-control", placeholder: "請輸入結束日期", required: true }
            .form-group
              .col-sm-offset-2.col-sm-3
                = submit_tag "確認", class: "btn btn-default"
                = link_to "取消"
        .panel-body
          .pull-right
            = link_to '輸出EXCEL', export_item_sales_result_admin_sales_reports_path(format: 'xlsx', start_date: params[:start_date], end_date: params[:end_date]), class: 'btn btn-default'
        %table.table.table-striped.table-bordered{:border => "0", :cellpadding => "0", :cellspacing => "0"}
          = render partial: "item_sales_table"
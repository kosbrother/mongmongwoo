.row
  .row
    .col-md-12.panel-warning
      .content-box-header.panel-heading
        .panel-title 商品銷售金額列表
      .content-box-large.box-with-header
        .panel-body
          .dropdown
            %button#taobao-revenue-menu.btn.btn-default.dropdown-toggle{"aria-expanded" => "true", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
              選擇淘寶商家
              %span.caret
            %ul.dropdown-menu.list-group{"aria-labelledby" => "taobao-revenue-menu"}
              %li= link_to "全部商家", item_revenue_result_admin_sales_reports_path
              - TaobaoSupplier.all.each do |supplier|
                %li= link_to "編號#{supplier.id}：#{supplier.name}", item_revenue_result_admin_sales_reports_path(supplier_id: supplier.id, time_field: params[:time_field])  
          %br
          %p.lead.current-taobao-supplier
            = get_taobao_supplier_name(params[:supplier_id])
          %hr
          .report-type
            .time_field_button.pull-right
              %ul.nav.nav-pills
                %li{ class: all_time_tab_active(params[:time_field]) }= link_to "全部", item_revenue_result_admin_sales_reports_path(supplier_id: params[:supplier_id])
                %li{ class: option_time_tab_active(params[:time_field], "month") }= link_to "按月排序", item_revenue_result_admin_sales_reports_path(time_field: "month", supplier_id: params[:supplier_id])
                %li{ class: option_time_tab_active(params[:time_field], "week") }= link_to "按週排序", item_revenue_result_admin_sales_reports_path(time_field: "week", supplier_id: params[:supplier_id])
                %li{ class: option_time_tab_active(params[:time_field], "day") }= link_to "按日排序", item_revenue_result_admin_sales_reports_path(time_field: "day", supplier_id: params[:supplier_id])
            %ul.nav.nav-tabs
              %li{:role => "presentation"}
                = link_to "商品銷售數量", item_sales_result_admin_sales_reports_path
              %li.active{:role => "presentation"}
                = link_to "商品銷售金額", item_revenue_result_admin_sales_reports_path              
          %table#example.table.table-striped.table-bordered{:border => "0", :cellpadding => "0", :cellspacing => "0"}
            %thead
              %tr
                %th{width: "10%"} 商品編號
                %th{width: "15%"} 商品分類
                %th{width: "45%"} 商品名稱
                %th{width: "15%"} 淘寶商家
                %th{width: "15%"} 銷售金額
            %tbody
              - if params[:supplier_id]
                = render partial: "item_revenue_with_supplier"
              - else
                = render partial: "item_revenue_without_supplier"
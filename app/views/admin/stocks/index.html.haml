.content-box-large
  %h2 庫存列表
  .filter-area.clearfix
    .filter-row
      .filter-dt 商家名稱
      .filter-dd.clearfix
        %ul.filter-list
          - @taobao_suppliers.each do |taobao|
            %li= link_to taobao.name, admin_stocks_path(taobao_supplier_id: taobao.id)
    .filter-row
      .filter-dt 商品狀態
      .filter-dd.clearfix
        %ul.filter-list
          = link_to "上架中", "#"
          = link_to "下架中", "#"
  %br
  = render_pagination(@items)
  %br
  = render "stock_table", stocks: @items
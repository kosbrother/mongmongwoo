.content-box-large
  %h2 庫存列表
  .filter-area.clearfix
    .filter-row
      .filter-dt 商家名稱
      .filter-dd.clearfix
        %ul.filter-list
          - @taobao_suppliers.each do |taobao|
            = link_to_stock_index(params[:taobao_supplier_id] == taobao.id.to_s, taobao.name, taobao_supplier_id: taobao.id)
    .filter-row
      .filter-dt 商品狀態
      .filter-dd.clearfix
        %ul.filter-list
          = link_to_stock_index(params[:status] == Item.statuses[:on_shelf].to_s, "上架中", taobao_supplier_id: @taobao_supplier.id, status: Item.statuses[:on_shelf])
          = link_to_stock_index(params[:status] == Item.statuses[:off_shelf].to_s, "下架中", taobao_supplier_id: @taobao_supplier.id, status: Item.statuses[:off_shelf])
  %br
  = render_pagination(@items)
  %br
  = render "stock_table", stocks: @items
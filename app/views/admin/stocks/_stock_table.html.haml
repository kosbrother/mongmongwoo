%table.table.table-striped.table-bordered
  %thead
    %tr
      %th{width: "40%"} 商品資訊
      %th 樣式資訊
  %tbody
    - @stocks.each do |stock|
      %tr
        %td
          .media
            .media-left
              = image_tag(stock.cover, size: "120x120")
            .media-body
              %h4.media-heading
                編號：
                = stock.id
              %p
                商品名稱：
                = stock.name
              %p
                商品成本：
                = round_decimal_number(stock.cost * 5)
              %p
                商品價格：
                = stock.price
        %td
          %ul.list-group
            - stock.stock_specs.each do |spec|
              %li.list-group-item
                = image_tag(spec.style_pic, size: "120x120")
                %ul.inline-display
                  %li
                    名稱：
                    = spec.style
                  %li
                    數量：
                    %span
                      = spec.style_amount
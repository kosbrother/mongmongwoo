.row
  .col-md-10
    .content-box-large
      .panel-heading
        .panel-title
          %h2 新增購物須知
      .panel-body
        = form_for [:admin, @info], html: { class: "form-horizontal" } do |f|
          .form-group
            = f.label :question, "Question", class: "col-sm-2 control-label"
            .col-sm-10
              = f.text_area :question, { class: "form-control", required: true }
          .form-group
            = f.label :answer, "Answer", class: "col-sm-2 control-label"
            .col-sm-10
              = f.text_area :answer, { class: "form-control", required: true }
          .form-group
            .col-sm-offset-2.col-sm-10
              = f.submit "確認送出", class: "btn btn-primary"
              = link_to "取消離開",  admin_shop_infos_path, class: "btn btn-warning"
= form_for [:admin, @additional_purchase_item], html: { class: "form-horizontal" } do |f|
  .form-group
    = f.label :item_id, "指定商品", class: "col-sm-2 control-label"
    .col-sm-8
      = f.select :item_id, Item.on_shelf.map{|item| ["#{item.id} - #{item.name}(原價：#{item.price})", item.id]}, {prompt: "請選擇商品"}, class: "form-control", required: true
  .form-group
    = f.label :price, "加購金額", class: "col-sm-2 control-label"
    .col-sm-8
      = f.number_field :price, { class: "form-control", placeholder: "請輸入金額", required: true, min: 0 }
  .form-group
    .col-sm-offset-2.col-sm-8
      = f.submit "確認送出", class: "btn btn-primary"
      = link_to "取消離開", admin_additional_purchase_items_path, class: "btn btn-warning"
.category-header
  .group
    .icon.visible-lg-inline-block
      = image_tag("icons/category_header/#{category.id}.png")
    .text
      = category.name
.row
  - items.each do |item|
    .col-lg-4.col-xs-6.xs-padding
      .product-block
        = link_to "#" do
          .image
            = image_tag(item.cover.url, class: 'img-responsive center-block')
          .text
            = item.name
          .price
            = "NT #{item.price}"
.row
  .col-lg-offset-4.col-lg-4
    = link_to "#" do
      .more-btn
        觀看更多
        = image_tag('icons/arrow.png', class: 'icon')
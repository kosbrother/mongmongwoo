.container
  .row
    .col-md-4
      / Logo
      .logo
        %h1
          %a{:href => admin_root_path} 管理者後台
    .col-md-4
      .row
        .col-lg-12
          = form_tag search_admin_items_path, { class: "input-group form", method: :get } do
            = search_field_tag(:search_term, params[:search_term], required: true, placeholder: "輸入商品名稱", class: "form-control")
            %span.input-group-btn
              = button_tag "搜尋", class: "btn btn-primary"
    .col-md-4
      .navbar.navbar-inverse{:role => "banner"}
        %nav.collapse.navbar-collapse.bs-navbar-collapse.navbar-right{:role => "navigation"}
          %ul.nav.navbar-nav
            %li
              = link_to  admin_checkout_path do
                %span.glyphicon.glyphicon-shopping-cart
                  購物車
            %li.dropdown
              %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
                Hi, #{current_manager.username}
                %b.caret
              %ul.dropdown-menu.animated.fadeInUp
                %li
                  %a{:href => "#"} Profile
                %li
                  %a{"data-method" => "delete", :href => admin_signout_path} 登出管理後台
.col-md-2
  .logo
    %h1
      =link_to '管理者後台', admin_root_path
.col-md-2
  .user
    .user-name Hi #{current_admin.username}
    = link_to '登出' ,admin_signout_path, class: 'sign-out', method: :delete
.col-md-4
  .search-bar
    = form_tag search_admin_items_path, { class: "input-group form", method: :get } do
      = search_field_tag(:search_term, params[:search_term], required: true, placeholder: "輸入商品名稱或商品編號", class: "form-control")
      %span.input-group-btn
        = button_tag "搜尋", class: "btn btn-primary"
.col-md-2.col-md-offset-2
  - if current_admin.manager?
    .cart
      = link_to checkout_admin_admin_carts_path do
        %span.glyphicon.glyphicon-shopping-cart 購物車

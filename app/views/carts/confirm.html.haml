= render 'partials/cart_steps', step: @step
.cart-confirm
  .icon-header.-pencil 訂單明細
  .cart-result
    .hidden-xs.header.row
      .col-lg-2 產品照片
      .col-lg-4 產品名稱
      .col-lg-2 產品樣式
      .col-lg-1 產品單價
      .col-lg-2 產品數量
      .col-lg-1 小計
    .divider.hidden-xs
    - @items.each do |item|
      .item-bar.row{id: "cart-item-#{item.id}"}
        .col-lg-2.col-xs-3.icon= image_tag(item.item.cover.icon.url)
        .col-lg-4.col-xs-9.itemname
          = item.item.name
          .visible-xs-block= item.item_spec.style
        .col-lg-2.col-xs-3.hidden-xs= item.item_spec.style
        .col-lg-1.col-xs-2= price_with_unit(item.item.price)
        .col-lg-2.col-xs-5= item.item_quantity
        .col-lg-1.col-xs-3{id: "cart-item-#{item.id}-subtotal"}= price_with_unit(item.subtotal)
    .divider
    .totalrow.row
      .col-lg-2.col-lg-offset-8.col-xs-8.text
        %div 產品總額
        %div 運費（711超商取貨付款）
      .col-lg-1.col-xs-4.number
        #cart-sum= price_with_unit(@cart.total)
        %div NT.60
      .col-lg-1.hidden-xs
    .divider
    .totalrow.row
      .col-lg-2.col-lg-offset-8.col-xs-8.text
        %div 總計
      .col-lg-1.col-xs-4.number
        #totalprice= price_with_unit(@cart.total+60)
      .col-lg-1.hidden-xs
.icon-header.-pencil 訂單人資料
.input-block.-info
  .group
    %div= "姓名：#{@info[:ship_name]}"
    %div= "電話：#{@info[:ship_phone]}"
    %div= "連絡信箱：#{@info[:ship_email]}"
.icon-header.-pencil 取貨門市資訊
.input-block.-store
  .group
    = hidden_field_tag :store_id, '' ,value: @store ? @store.id : nil, required: true
    %div= "門市名稱： #{@store.name}"
    %div= "地址： #{@store.address}"
= form_tag submit_cart_path(@cart, info: @info, store: @store), method: :post do
  .submit-session
    =link_to '上一步', info_cart_path(@cart) , class: 'btn btn-previous'
    =submit_tag '送出訂單', class: 'btn'
.icon-header.-location 超商配送資訊
.input-block.-store
  .group
    %span 選擇7-11寄送門市
    =link_to '選擇門市', '',  class: 'btn regular-btn select-store', remote: true
  .divider
  .group
    = hidden_field_tag :store_id, '' ,value: store ? store.id : nil, required: true
    %span.title 門市名稱
    %span= store ? store.name : "請選擇送達門市"
  .group
    %span.title 門市地址
    %span= store ? store.address : ""
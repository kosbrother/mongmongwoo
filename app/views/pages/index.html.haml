.index
  #index-carousel.carousel.slide{"data-ride" => "carousel"}
    / Indicators
    %ol.carousel-indicators
      %li.active{"data-slide-to" => "0", "data-target" => "#index-carousel"}
      %li{"data-slide-to" => "1", "data-target" => "#index-carousel"}
      %li{"data-slide-to" => "2", "data-target" => "#index-carousel"}
    / Wrapper for slides
    .carousel-inner{:role => "listbox"}
      .item.active
        = link_to "#" do
          = image_tag('carousel/banner1', class: 'img-responsive center-block')
      .item
        = link_to "#" do
          = image_tag('carousel/banner2', class: 'img-responsive center-block')
      .item
        = link_to "#" do
          = image_tag('carousel/banner3', class: 'img-responsive center-block')
    / Controls
    %a.left.carousel-control{"data-slide" => "prev", :href => "#index-carousel", :role => "button"}
      %span.glyphicon.glyphicon-chevron-left{"aria-hidden" => "true"}
      %span.sr-only Previous
    %a.right.carousel-control{"data-slide" => "next", :href => "#index-carousel", :role => "button"}
      %span.glyphicon.glyphicon-chevron-right{"aria-hidden" => "true"}
      %span.sr-only Next
  .category-header
    .group
      .icon.mirror
      .text
        新品上架
  .row
    .col-lg-4
      = link_to "#" do
        .product-block
          .image
            = image_tag('example/cover.png', class: 'img-responsive center-block')
          .text
            可愛萌卡通系列
          .price
            NT.345
  .row
    .col-lg-offset-4.col-lg-4
      = link_to "#" do
        .more-btn
          觀看更多
          %span.glyphicon.glyphicon-arrow-right
